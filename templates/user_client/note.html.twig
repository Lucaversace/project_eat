                    {{ form_row(form.rate,{'attr':{'min':0,'max':5,'step':1,'class':'form-control input input-tr','placeholder':'Note de 1 Ã  5 '},'label':' '}) }}
                  </div>
                </div>  

                <div class="form-row">
