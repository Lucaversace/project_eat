{% extends 'base.html.twig' %}

{% block body %}
    
    {% for form in formulaires %}
        {{dump(dishs[loop.index -1].id)}}
    {{ form_start(form) }}
    <div class="container modern-form">
            <div class="modern-form__form-container">
                <form> 
                    <div class="form-row" style="margin-top: 5px;">
                        <div class="col">
                        {{ form_row(form.rate,{'attr':{'class':'form-control input input-tr','placeholder':'Note'},'label':' '}) }}
                        </div>
                        
                        {{ form_widget(form.dish, {'value' :  dishs[loop.index -1].id }) }}
                        

                    </div>
                    <div class="form-row">
                        <div class="col text-center">   
                        {{ form_row(form.submit,{'attr':{'class':'btn btn-primary submit-now'},'label':"Enregistrer"}) }}
                        </div>
                    </div>
                {{ form_rest(form) }}
                </form>
            </div>
        </div>
    {{ form_end(form) }}
    {% endfor %}
{% endblock %}