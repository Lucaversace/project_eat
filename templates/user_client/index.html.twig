{% extends 'base.html.twig' %}

{% block title %}UserClient index{% endblock %}

{% block body %}
    <h1>UserClient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_client in user_clients %}
            <tr>
                <td>{{ user_client.id }}</td>
                <td>{{ user_client.email }}</td>
                <td>{{ user_client.roles ? user_client.roles|json_encode : '' }}</td>
                <td>{{ user_client.password }}</td>
                <td>{{ user_client.firstname }}</td>
                <td>{{ user_client.lastname }}</td>
                <td>
                    <a href="{{ path('user_client_show', {'id': user_client.id}) }}">show</a>
                    <a href="{{ path('user_client_edit', {'id': user_client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_client_new') }}">Create new</a>
{% endblock %}
