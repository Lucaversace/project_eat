{% block title %}Historique {% endblock %}

{% block body %}
    <div>
        <table>
            <tr>
                <td>Client</td>
                <td>{{order.user.firstname}} {{order.user.lastname}}</td>
            </tr>
            <tr>
                <td>Date de la commande</td>
                <td>{{order.date | date('d-m-Y Ã  H:i')}}</td>
            </tr>
