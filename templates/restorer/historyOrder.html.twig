{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-column justify-content-center align-items-center">
        <h1>Historique des commandes</h1>
        <div class="d-flex justify-content-center flex-wrap" style="overflow:auto;background: #f5f5f5;height: 500px;width: 735px;border-radius: 16px;box-shadow: 25px 15px 20px rgb(208,208,208);margin-top: 34px;">
            {% if orders %}
                {% for order in orders %}
                    <div style="width: 700px;height: 112px;margin-top: 45px;margin-bottom:10px;color: rgb(255,255,255);background: #ebebeb;padding: 16px;">
                        <div class="row">
                            <div class="col">
                                <p style="color: rgb(0,0,0);">Commande n°{{order.id}}</p>
                            </div>
                            <div class="col">
                                <p style="color: rgb(0,0,0);margin-left: 20px;">État : {{ order.status }}</p>
                            </div>
                        </div>
                        <div class="row" style="height: 53px;">
                            <div class="col" style="height: 53px;">
                                <p style="color: rgb(0,0,0);margin-top:16px;margin-left: 3px;">Date : {{ order.date | date("m/d/Y à H:i")}}</p>
                            </div>
                            <div class="col" style="height:53px;">
                                <a href="{{ path('order_details_restorer', {'id': order.id}) }}" style="color: #009879;margin-left:199px;">Voir les détails</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>Vous n'avez pas de commandes</p>
            {% endif %}
        </div>
    </div>
   
{% endblock %}