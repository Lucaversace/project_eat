{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

    <h1>Votre panier</h1>

    {% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}

            <tr>
                <td>{{item.product.nom}}</td>
                <td>{{item.product.price}}</td>
                <td>{{item.quantity}}</td>
                <td>{{item.product.price * item.quantity}}</td>
                <td><a href="{{ path('cart_remove', {'id': item.product.id }) }}" class"btn btn-danger btn-sm"> <i class="fas fa-trash"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total : </td>
                <td>{{ total }}</td>
                <td>€</td>
            </tr>
        </tfoot>
    </table>
    <a href="{{ path('order') }}" class="btn btn-success">Passer la commande</a>
    {% else %}
        <p>C'est  vide !</p>
    {% endif %}
    
{% endblock %}
