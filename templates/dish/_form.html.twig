{{ form_start(form) }}
<div class="container modern-form">
    <div class="modern-form__form-container">
        <form>
            <div class="form-row" style="height: 60px;">
                <div class="col col-contact">
                    <div class="form-group modern-form__form-group--padding-r">
                        {{ form_row(form.nom,{'attr':{'class':'form-control input input-tr','placeholder':'Nom du plat'},'label':' '}) }}
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                </div>
                <div class="col col-contact">
                    <div class="form-group modern-form__form-group--padding-l">
                            {{ form_row(form.dishFile,{'attr':{'class':'form-control input input-tr','placeholder':'Image'},'label':' '}) }}
                        <div class="line-box">
                            <div class="line"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row" style="margin-top: 5px;">
             <div class="col">
                {{ form_row(form.description,{'attr':{'class':'form-control input input-tr','placeholder':'Description'},'label':' '}) }}
                </div>
            </div>  

            <div class="form-row" style="margin-top: 5px;">
                <div class="col">
                {{ form_row(form.price,{'attr':{'class':'form-control input input-tr','placeholder':'Prix Unitaire (â‚¬)'},'label':' '}) }}
                </div>
            </div> 

            <div class="form-row">
                <div class="col text-center">   
                    {{ form_row(form.submit,{'attr':{'class':'btn btn-primary submit-now'},'label':"Enregistrer"}) }}
                </div>
            </div>
        {{ form_rest(form) }}
        </form>
    </div>
    </div>

{{ form_end(form) }}