{% extends 'base.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}
    <h1>Mes plats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.nom }}</td>
                <td>{{ dish.description }}</td>
                <td>{{ dish.price }}</td>
                <td> <img src="{{ asset('uploads/' ~ dish.image) }}" style="height: 237px;width: 429px;" alt=" {{dish.nom}}"></td>
                <td>
{#                     <a href="{{ path('dish_show', {'id': dish.id}) }}">show</a> #}
                    <a href="{{ path('dish_edit', {'id': dish.id}) }}" style="color:#009879">Modifier</a>
                    <a href="{{ path('dish_delete', {'id': dish.id}) }}" style="color:#009879; margin-left:30px;">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#     <a href="{{ path('dish_new') }}">Create new</a> #}
{% endblock %}
